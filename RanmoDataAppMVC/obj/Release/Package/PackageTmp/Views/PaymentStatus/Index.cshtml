@model RanmoDataAppMVC.ViewModels.PaymentStatusList

@{
    ViewBag.Title = "Payment Status";
}


<table width="100%" class="table-condensed">
    <tr>
        <td width="280px">
            <h1>Payment Status</h1>
        </td>
        <td align="right"><a href="@Url.Action("Create","PaymentStatus")" class="btn btn-success"><i style="vertical-align: -7px;" class="material-icons">&#xE147;</i> Create New</a></td>
    </tr>
</table>

@using (Html.BeginForm())
{
    <table class="table table-sm table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Payment Status
                </th>
                <th width="200px">Actions</th>
            </tr>
        </thead>

        <tbody>
            @*@foreach (var item in Model.psLst)*@
            @for(int i=0;i   <Model.psLst.Count();i++)
            {
                <tr>
                    <td>
                        @*@Html.EditorFor(modelItem => item.Payment_Status)*@
                        @Html.EditorFor(modelItem => Model.psLst[i].Payment_Status)
                    </td>
                    <td>
                        @*<a href="@Url.Action("Edit", "PaymentStatus", new { id = item.Id })" class="btn btn-default"><i class="fa fa-pencil "></i> Edit</a>*@
                        @*<a onclick="Delete(@item.Id)" class="btn btn-default"><i class="fa fa-trash "></i> Delete</a>*@
                        <input type="submit" class="btn btn-success" value="Edit" />

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

    @section scripts {

        <script>
        function Delete(id) {
            var confirmed = confirm("Are you sure!");
            if (confirmed) {
                window.location.href = '@Url.Action("Delete", "PaymentStatus")/' + id;
            }
        }
        </script>
    }
